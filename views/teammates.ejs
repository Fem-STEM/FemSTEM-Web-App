<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />

    <!-- FA CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css"
      rel="stylesheet"
    />
    <link
      href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="shortcut icon" href="img/favicon.png" type="image/png" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/styles.css" />
    <link rel="stylesheet" href="css/animate.css" />
    <link rel="stylesheet" href="css/modal_form.css" />
    <link rel="stylesheet" href="css/toast.css" />

    <!-- Title of Page -->
    <title>FemSTEM</title>

    <!-- Teammates Custom CSS -->
    <style>
      *:hover {
        -webkit-transition: all 1s ease;
        transition: all 1s ease;
      }
      section {
        float: left;
        width: 100%;
        background: rgb(250, 224, 186); /* fallback for old browsers */
        border-radius: 20px;
        margin-bottom: 6%;
        margin-top: 6%;
        padding-top: 5%;
        padding-bottom: 5%;
      }
      h1 {
        float: left;
        width: 100%;
        color: #232323;
        margin-bottom: 30px;
        font-size: 14px;
      }
      h1 span {
        font-family: "Libre Baskerville", serif;
        display: block;
        font-size: 45px;
        text-transform: none;
        margin-bottom: 20px;
        margin-top: 30px;
        font-weight: 700;
      }
      h1 a {
        color: #131313;
        font-weight: bold;
      }

      /*Profile card 2*/
      .profile-card-2 .card-img-block {
        float: left;
        width: 100%;
        height: 150px;
        overflow: hidden;
      }
      .profile-card-2 .card-body {
        position: relative;
      }
      .profile-card-2 .profile {
        border-radius: 50%;
        position: absolute;
        top: -42px;
        left: 15%;
        max-width: 75px;
        border: 3px solid rgba(255, 255, 255, 1);
        -webkit-transform: translate(-50%, 0%);
        transform: translate(-50%, 0%);
      }
      .profile-card-2 h5 {
        font-weight: 600;
        color: #6ab04c;
      }
      .profile-card-2 .card-text {
        font-weight: 300;
        font-size: 15px;
      }
      .profile-card-2 .icon-block {
        float: right;
      }
      .profile-card-2 .icon-block a {
        text-decoration: none;
      }
      .profile-card-2 i {
        display: inline-block;
        font-size: 16px;
        color: #6ab04c;
        text-align: center;
        border: 1px solid #6ab04c;
        width: 30px;
        height: 30px;
        line-height: 30px;
        border-radius: 50%;
        margin: 0 5px;
      }
      .profile-card-2 i:hover {
        background-color: #6ab04c;
        color: #fff;
      }

      /* Team card hashtags */
      .card-skilltag {
        width: 20px;
        margin: 4% 1%;
        padding: 7px 12px;
        color: #fff;
        border-radius: 18px;
        background-color: rgb(11, 163, 201);
        white-space: nowrap;
      }
    </style>
  </head>

  <body>
    <%- include('modal_form') %> <%- include('toast') %>

    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-md navbar-light fixed-top"
      style="background-color: #d291bc !important"
    >
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img
            src="img/logo-nobg.png"
            width="250"
            background="white"
            text-indent="-99999px"
            style="margin-left: 3%"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <% if(currentUser){ %>
              <a class="nav-link" aria-current="page" href="/help">Help</a>
              <% } %>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/tutorials"
                >Tutorials</a
              >
            </li>
            <li class="nav-item nav-item-active">
              <a class="nav-link nav-link-active" aria-current="page" href="#"
                >Teammates</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/opportunities"
                >Opportunities</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/pride">Pride</a>
            </li>

            <li
              class="nav-item"
              style="
                background-color: #d291bc !important;
                margin-bottom: 0 !important;
                padding-top: 0 !important;
                padding-bottom: 0 !important;
              "
            >
              <% if(currentUser){ %>
              <a
                class="nav-link"
                aria-current="page"
                href="/profile"
                style="
                  margin-top: 0 !important;
                  margin-bottom: 0 !important;
                  padding-top: 0 !important;
                  padding-bottom: 0 !important;
                "
                ><i
                  class="fas fa-user-circle"
                  style="
                    font-size: 36px;
                    margin-top: 0 !important;
                    margin-bottom: 0 !important;
                    padding-top: 0 !important;
                    padding-bottom: 0 !important;
                    color: #ffdfd3;
                  "
                ></i
                ><%= currentUser.name %></a
              >
              <% } %>
            </li>

            <% if(!currentUser){ %>
            <li class="nav-item">
              <a
                id="modal_btn"
                class="nav-link btn-get-quote text-white"
                href="#login"
                >Login</a
              >
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Find your teammates -->
    <div class="container">
      <div class="hiddenCB top-con">
        <h3>I need teammates with skills...</h3>
        <p>
          Find your perfect team for your upcoming hackathon. Simply select the
          skill tags you are looking for in your teammates.
        </p>

        <form method="POST" action="/teammates">
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb1"
              value="uiux"
            /><label class="tag-team" for="cb1">UI-UX</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb2"
              value="graphicdes"
            /><label class="tag-team" for="cb2">Graphic Designing</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb3"
              value="fedev"
            /><label class="tag-team" for="cb3">Front-end Development</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb4"
              value="bedev"
            /><label class="tag-team" for="cb4">Back-end Development</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb5"
              value="db"
            /><label class="tag-team" for="cb5">Databases</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb6"
              value="modev"
            /><label class="tag-team" for="cb6">Mobile Development</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb7"
              value="ml"
            /><label class="tag-team" for="cb7">Machine Learning</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb8"
              value="av"
            /><label class="tag-team" for="cb8">AR-VR</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb9"
              value="gd"
            /><label class="tag-team" for="cb9">Game Development</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb10"
              value="fs"
            /><label class="tag-team" for="cb10">Full-stack Development</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb11"
              value="fl"
            /><label class="tag-team" for="cb11">Flutter</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb12"
              value="dsa"
            /><label class="tag-team" for="cb12"
              >Data Structures & Algorithms</label
            >
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb13"
              value="ds"
            /><label class="tag-team" for="cb13">Data Science</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb14"
              value="clang"
            /><label class="tag-team" for="cb14">C++</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb15"
              value="java"
            /><label class="tag-team" for="cb15">Java</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb23"
              value="php"
            /><label class="tag-team" for="cb23">PHP</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb16"
              value="js"
            /><label class="tag-team" for="cb16">Javascript</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb17"
              value="htm"
            /><label class="tag-team" for="cb17">HTML 5, CSS 3</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb18"
              value="mon"
            /><label class="tag-team" for="cb18"
              >Mongo/ Cockroach/ Cassandra</label
            >
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb19"
              value="nod"
            /><label class="tag-team" for="cb19">Node.js</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb20"
              value="py"
            /><label class="tag-team" for="cb20">Python</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb21"
              value="rea"
            /><label class="tag-team" for="cb21">React, React Native</label>
            <input
              class="form-check-input"
              type="checkbox"
              name="checked"
              id="cb22"
              value="ang"
            /><label class="tag-team" for="cb22">Angular</label>
          </div>

          <div class="row">
            <div class="col-8 col-md-3">
              <button
                type="submit"
                class="submit-btn"
                style="
                  margin-top: 4%;
                  margin-bottom: 2%;
                  width: 60%;
                  border-radius: 8px;
                  color: #fff;
                "
              >
                Find Teammates
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <hr />

    <!-- Teammate cards -->
    <section>
      <div class="container">
        <div class="row">
          <% requser.forEach(function(user){ %>
          <div class="col-md-4">
            <div class="card profile-card-2" style="margin-top: 8%">
              <div class="card-img-block">
                <img
                  class="img-fluid"
                  src="https://images.pexels.com/photos/965345/pexels-photo-965345.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940"
                  alt="Card image cap"
                />
              </div>
              <div class="card-body pt-5">
                <!-- add mentor mentee condition here -->
                <% if(user.is_mentor == 1){ %>
                <img
                  src="../img/mentor.jpg"
                  alt="profile-image"
                  class="profile"
                />
                <% } else { %>
                <img
                  src="../img/mentee.jpg"
                  alt="profile-image"
                  class="profile"
                />
                <% } %>

                <!-- Member name with mentor status-->
                <h5 class="card-title">
                  <%= user.name %> <% if(user.is_mentor == 1){ %> (Mentor) <% }
                  else { %> (Mentee) <% } %>
                </h5>

                <!-- Discord id -->
                <p>
                  <i class="fab fa-discord"></i> <strong>id:</strong> <%=
                  user.discord_id %>
                </p>

                <!-- Skill tags -->
                <% user.skills.forEach(function(skill){%>
                <span class="card-skilltag"> <%= skill %> </span>
                <%}) %>

                <div class="icon-block" style="margin-top: 5%">
                  <!-- Mail address -->
                  <a href="mailto:<%= user.username %>">
                    <i class="fas fa-envelope-open"></i
                  ></a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- Dummy image -->
    <div class="container team-dum-img">
      <div class="row">
        <div class="col-md-12">
          <img src="img/team.png" width="80%" alt="team image" />
        </div>
      </div>
    </div>

    <!-- Discord link -->
    <div class="container" style="margin-top: 6%">
      <div class="row">
        <div class="col-12">
          <h3 style="text-align: justify; color: rgb(73, 69, 69)">
            For more interactions and mentor help, you can also head over to
            <a href="https://discord.gg/CBteqBHz3b"
              >our official Discord server.</a
            >
          </h3>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-4 footer-left">
            <p>
              <img src="img/favicon.png" style="width: 65px" />
              <span style="color: #573f70; font-weight: 600"
                >Made with <i class="fas fa-heart"></i> by FemSTEM</span
              >
            </p>
          </div>
          <div class="col-md-3 offset-md-1 footer-right">
            <a href="https://github.com/Swatilekha-Roy/Fem-STEM"
              ><i class="fab fa-github"></i
            ></a>
            <a href="mailto:swatilekha.roy4@gmail.com"
              ><i class="fa fa-envelope"></i
            ></a>
            <a href="https://discord.gg/CBteqBHz3b"
              ><i class="fab fa-discord"></i
            ></a>
          </div>
        </div>
      </div>
    </footer>

    <!-- Scroll to top arrow -->
    <a href="javascript:" id="return-to-top"
      ><i class="fa fa-angle-up" aria-hidden="true" style="font-size: 30px"></i
    ></a>

    <!-- JQuery JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Google API JS-->
    <script src="https://apis.google.com/js/client.js?onload=googleApiClientReady"></script>
    <script src="https://www.youtube.com/iframe_api"></script>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"
      integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js"
      integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc"
      crossorigin="anonymous"
    ></script>

    <!-- Custom scripts -->
    <script type="text/javascript" src="js/modal.js"></script>
    <script type="text/javascript" src="js/scripts.js"></script>
    <script type="text/javascript" src="js/wow.min.js"></script>

    <!-- Userway -->
    <script>
      (function (d) {
        var s = d.createElement("script");
        s.setAttribute("data-account", "E9TGLGySQm");
        s.setAttribute("src", "https://cdn.userway.org/widget.js");
        (d.body || d.head).appendChild(s);
      })(document);
    </script>
    <noscript
      >Please ensure Javascript is enabled for purposes of
      <a href="https://userway.org">website accessibility</a></noscript
    >

    <!-- WOW animations -->
    <script type="text/javascript">
      new WOW().init();
    </script>
  </body>
</html>
