<!DOCTYPE html>
<html lang="en">
  <head>
    <!--  Added Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />

    <!-- FA CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css"
      rel="stylesheet"
    />

    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Favicon -->
    <link rel="shortcut icon" href="img/favicon.png" type="image/png" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/styles.css" />
    <link rel="stylesheet" href="css/animate.css" />
    <link rel="stylesheet" href="css/modal_form.css" />
    <link rel="stylesheet" href="css/toast.css" />

    <style>
      #addopportunity {
        display: none;
      }

      .heads {
        text-align: center;
        width: 100%;
        height: auto;
        background-size: cover;
        background-attachment: fixed;
        position: relative;
        overflow: hidden;
        border-radius: -1 0 85% 85% / 92%;
      }

      .overlay {
        width: 100%;
        height: 80%;
        color: #fff;
        text-shadow: 1px 1px 1px black;
        background-image: linear-gradient(
            to right,
            rgba(66, 65, 65, 0.73),
            rgba(163, 163, 163, 0.73)
          ),
          url("img/opportunity.jpg");
        background-position: 50% 60%;
      }
    </style>

    <script>
      $(document).ready(function () {
        $("#add").click(function () {
          $("#addopportunity").slideToggle("slow");
        });
      });
    </script>

    <!-- Title of Page -->
    <title>FemSTEM</title>
  </head>

  <body>
    <%- include('modal_form') %> <%- include('toast') %>

    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-md navbar-light fixed-top"
      style="background-color: #d291bc !important"
    >
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img
            src="img/logo-nobg.png"
            width="250"
            background="white"
            text-indent="-99999px"
            style="margin-left: 3%"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <% if(currentUser){ %>
              <a class="nav-link" aria-current="page" href="/help">Help</a>
              <% } %>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/tutorials"
                >Tutorials</a
              >
            </li>
            <li class="nav-item">
              <% if(currentUser){ %>
              <a class="nav-link" aria-current="page" href="/teammates"
                >Teammates</a
              >
              <% } %>
            </li>
            <li class="nav-item nav-item-active">
              <a class="nav-link nav-link-active" aria-current="page" href="#"
                >Opportunities</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/pride">Pride</a>
            </li>

            <li
              class="nav-item"
              style="
                background-color: #d291bc !important;
                margin-bottom: 0 !important;
                padding-top: 0 !important;
                padding-bottom: 0 !important;
              "
            >
              <% if(currentUser){ %>
              <a
                class="nav-link"
                aria-current="page"
                href="/profile"
                style="
                  margin-top: 0 !important;
                  margin-bottom: 0 !important;
                  padding-top: 0 !important;
                  padding-bottom: 0 !important;
                "
                ><i
                  class="fas fa-user-circle"
                  style="
                    font-size: 36px;
                    margin-top: 0 !important;
                    margin-bottom: 0 !important;
                    padding-top: 0 !important;
                    padding-bottom: 0 !important;
                    color: #ffdfd3;
                  "
                ></i
                ><%= currentUser.name %></a
              >
              <% } %>
            </li>

            <% if(!currentUser){ %>
            <li class="nav-item">
              <a
                id="modal_btn"
                class="nav-link btn-get-quote text-white"
                href="#login"
                >Login</a
              >
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div
      class="heads overlay"
      style="
        background-color: rgb(243, 243, 243);
        padding: 10px;
        margin-top: 100px;
        margin-bottom: -70px;
      "
    >
      <h2
        style="
          padding: 80px;
          font-family: 'Sarina', cursive;
          color: rgba(255, 251, 2, 0.918) !important;
        "
      >
        We are here to help you shine!
      </h2>
      <p
        style="
          font-size: 25px;
          margin-top: -71px;
          text-align: center;
          font-family: 'Sarina', cursive;
        "
      >
        Let's go do it!
      </p>
    </div>

    <div class="row search-j top-con" style="margin-left: 5%; color: #c8f57c">
      <div class="col-lg-8">
        <form class="form-inline my-2 my-lg-0" style="margin-top: 10%">
          <div class="form-group">
            <input
              class="form-control input-inline"
              id="searchTxt"
              type="text"
              style="width: 300px; display: inline-block"
              placeholder="Search opportunities..."
              id="paperInputs1"
              type="search"
            />
            <button
              class="btn btn-small my-2 my-sm-0"
              type="submit"
              style="margin-left: 1%"
            >
              Search
            </button>
            <!-- Search button is non-functional -->
          </div>
        </form>
      </div>

      <div class="col-lg-3" style="margin-top: 4%; margin-right: 1%">
        <button class="btn btn-small my-2 my-sm-0" id="add">
          Add an opportunity +
        </button>
      </div>
    </div>

    <!-- Opportunity form Section -->
    <div class="container my-3">
      <div
        class="card wow fadeInUp"
        id="addopportunity"
        style="
          width: 100%;
          background-color: #ffdec3;
          border-color: transparent;
          border-radius: 1rem;
        "
      >
        <div class="card-body">
          <form
            class="sweet-form"
            action="/opportunities"
            method="post"
            style="margin: 5% 4%"
          >
            <div class="form-group">
              <label>Opportunity Title</label>
              <input
                class="form-control"
                type="text"
                name="Title"
                placeholder="Hack Girl Summer 2.0"
                required
              /><br />
              <label>Description</label>
              <textarea
                class="form-control"
                name="Description"
                rows="4"
                cols="70"
                placeholder="In this hackathon, the theme is open but feel free to hack on projects that focus on gender equity and inclusion."
                style="resize: none"
                required
              ></textarea
              ><br />
              <input
                class="form-control"
                type="text"
                name="Eligibility"
                placeholder="Eligibility"
                required
              /><br />
              <input
                class="form-control"
                type="text"
                name="Deadline"
                placeholder="Deadline"
                required
              /><br />
              <label>Official Event Link</label>
              <input
                class="form-control"
                type="url"
                name="Link"
                placeholder="https://organize.mlh.io/participants/events/7019-hack-girl-summer-2-0"
                required
              /><br />
            </div>
            <button
              class="btn btn-primary"
              type="submit"
              name="button"
              style="background: #f3a8b5"
              onclick="loadDoc()"
            >
              Publish
            </button>
          </form>
        </div>
      </div>

      <br />
      <hr />

      <div id="notes" class="row container-fluid wow fadeInLeft">
        <div class="row">
          <div class="col-md-7">
            <h3 style="margin-top: 2%">Oppotunities</h3>
            Utilize these to the best of your abilities! And find us on every
            step of the way to come forward and help you succeed!
            <br />
            <br />
            Also a gentle reminder is in place for double checking the
            opportunities before you make a public post here! Please make sure
            that the website links are genuine and the community is inclusive.
            <br />
            The only way we will grow is by being there for each other!
          </div>
          <div class="col-md-4" style="float: right">
            <img src="img/oppimg.png" width="400px" style="float: right" />
          </div>
        </div>

        <% post.forEach(function(post){ %>
        <div class="row flex-top" style="display: flex; margin: 2%">
          <header
            class="border shadow comment-bg"
            style="padding: 4% 2%; background-color: #fceec5"
          >
            <strong
              ><h5 style="font-weight: 800">
                <%=post.title%> : &nbsp;
              </h5></strong
            >
            <p style="line-height: 30px"><%=post.description%></p>
            <p style="line-height: 30px">
              <strong>Eligibility</strong>: <%=post.eligibility%>
            </p>
            <p style="line-height: 30px">
              <strong>Deadline</strong>: <%=post.deadline%>
            </p>
            <p style="line-height: 30px">
              <a href="<%=post.link%>"
                ><button class="btn btn-primary" style="float: right">
                  Know More
                </button></a
              >
            </p>
          </header>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-4 footer-left">
            <p>
              <img src="img/favicon.png" style="width: 65px" />
              <span style="color: #573f70; font-weight: 600"
                >Made with <i class="fas fa-heart"></i> by FemSTEM</span
              >
            </p>
          </div>
          <div class="col-md-3 offset-md-1 footer-right">
            <a href="https://github.com/Swatilekha-Roy/Fem-STEM"
              ><i class="fab fa-github"></i
            ></a>
            <a href="mailto:swatilekha.roy4@gmail.com"
              ><i class="fa fa-envelope"></i
            ></a>
            <a href="https://discord.gg/CBteqBHz3b"
              ><i class="fab fa-discord"></i
            ></a>
          </div>
        </div>
      </div>
    </footer>

    <!-- Scroll to top arrow -->
    <a href="javascript:" id="return-to-top"
      ><i class="fa fa-angle-up" aria-hidden="true" style="font-size: 30px"></i
    ></a>

    <!-- JQuery JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"
      integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js"
      integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc"
      crossorigin="anonymous"
    ></script>

    <!-- Custom scripts -->
    <script type="text/javascript" src="js/modal.js"></script>
    <script type="text/javascript" src="js/scripts.js"></script>
    <script type="text/javascript" src="js/wow.min.js"></script>
    <!-- <script type="text/javascript" src="js/journal.js"></script> -->

    <!-- Userway -->
    <script>
      (function (d) {
        var s = d.createElement("script");
        s.setAttribute("data-account", "E9TGLGySQm");
        s.setAttribute("src", "https://cdn.userway.org/widget.js");
        (d.body || d.head).appendChild(s);
      })(document);
    </script>
    <noscript
      >Please ensure Javascript is enabled for purposes of
      <a href="https://userway.org">website accessibility</a></noscript
    >

    <!-- WOW animations -->
    <script type="text/javascript">
      new WOW().init();
    </script>
  </body>
</html>
